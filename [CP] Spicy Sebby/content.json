{
    "Format": "2.0.0",
    // Config 
    "ConfigSchema": {
      "NOTMarriedSpicyDialogue": {
        "AllowValues": "true, false",
        "Default": "true",
        "Section": "Dialogue",
        "Description": "Disable to turn off the pre-marriage spice. If no other dialogue mods are installed, reverts Spicy Seb back to Vanilla Seb :(."
      },
      "MarriageSpicyDialogue": {
        "AllowValues": "true, false",
        "Default": "true",
        "Section": "Dialogue",
        "Description": "Disable to turn off the post-marriage spice. If no other dialogue mods are installed, reverts Spicy Marriage Seb back to Vanilla Seb :(."
      },
      "GiftDialogue": {
        "AllowValues": "true, false",
        "Default": "true",
        "Section": "Dialogue",
        "Description": "Disable to turn off this mod's gift dialogue."
      },
      "FestivalDialogue": {
        "AllowValues": "true, false",
        "Default": "true",
        "Section": "Dialogue",
        "Description": "Disable to turn off this mod's festival dialogue."
      }
    },

    // Include files
    "Changes": [
      {
        "LogName": "Seb Pre-Marriage Dialogue",
        "Action": "Include",
        "FromFile": "Assets/Dialogue/SebPremarriage.json",
        "When": {
          "NOTMarriedSpicyDialogue": "true"
        }
      },
      {
        "LogName": "Seb Post-Marriage Dialogue",
        "Action": "Include",
        "FromFile": "Assets/Dialogue/SebMarriage.json",
        "When": {
          "MarriageSpicyDialogue": "true"
        }
      },
      {
        "LogName": "Seb Gift Dialogue",
        "Action": "Include",
        "FromFile": "Assets/Dialogue/SebGift.json",
        "When": {
          "GiftDialogue": "true"
        }
      },
      {
        "LogName": "Seb Festival Dialogue",
        "Action": "Include",
        "FromFile": "Assets/Dialogue/SebFestival.json",
        "When": {
          "FestivalDialogue": "true"
        }
      },
      {
        "LogName": "Seb's New Events",
        "Action": "Include",
        "FromFile": "Assets/Events/SebNewEvents.json"
      },
      {
        "LogName": "Seb's Rewritten Vanilla Events",
        "Action": "Include",
        "FromFile": "Assets/Events/SebVanillaEvents.json"
      },
      {
        "LogName": "DND Event - Combo",
        "Action": "Include",
        "FromFile": "Assets/Events/DNDEvent.json"
      }
    ]
  }